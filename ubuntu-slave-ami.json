{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "source_ami": "ami-f6b11181",
      "instance_type": "m1.medium",
      "ssh_username": "ubuntu",
      "ssh_timeout": "5m",
      "ami_name": "ubuntu-jenkins-slave {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/slave-install.sh"
      ]
    },
    {
      "type": "file",
      "source": "files/jenkins-slave.conf",
      "destination": "/tmp/jenkins-slave.conf"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/swarm-service.sh"
        ]
    }
  ]
}
